<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:id="@+id/top_bar"
    android:background="@color/status_bar"
    android:clickable="true">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="14dp"
        android:src="@mipmap/ic_back"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/btn_back"
        android:text="@string/select_image"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_back_press"
        android:padding="14dp"
        android:src="@mipmap/ic_del"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:background="@null"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:textAllCaps="false"
        android:text="@string/complete_3_9"
        android:textColor="@color/btn_ok_color"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tv_des"
        android:layout_alignBottom="@+id/tv_des"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp" />
</RelativeLayout>