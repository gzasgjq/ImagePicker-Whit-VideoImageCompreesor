<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gjq.demo.demo.activites.WebSocketActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_socket_url_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <MultiAutoCompleteTextView
            android:id="@+id/edit_socket_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ws://192.168.21.74:6789"
            android:hint="Url: "/>

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/edit_socket_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Param:"/>

    <Button
        android:id="@+id/btn_socket_connect_websocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect WebSocket"/>

    <Button
        android:id="@+id/btn_socket_connect_socket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Socket"/>

    <Button
        android:id="@+id/btn_socket_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"/>

    <Button
        android:id="@+id/btn_socket_send_socket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SendToSocket"/>

    <TextView
        android:id="@+id/tv_socket_result"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:hint="Result: "
        android:layout_height="0dp"/>

</LinearLayout>
